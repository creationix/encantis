{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "wasmscript",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {

        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.wasmscript",
                    "begin": "--",
                    "end": "\n"
                },
                {
                    "name": "comment.block.wasmscript",
                    "begin": "-<",
                    "end": ">-"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.property.wasmscript",
                    "match": "=>|\\->"
                },
                {
                    "name": "keyword.operator.lambda.wasmscript",
                    "match": "=>|\\->"
                },
                {
                    "name": "keyword.operator.logical.wasmscript",
                    "match": "&&|\\|\\||\\?\\?"
                },
                {
                    "name": "keyword.operator.assignment.augmented.wasmscript",
                    "match": "%=|&=|\\*=|\\+=|-=|/=|\\^=|\\|=|<<=|>>=|\\|\\|=|\\?\\?="
                },
                {
                    "name": "keyword.operator.bitwise.wasmscript",
                    "match": "<<|>>|&|\\^|\\|"
                },
                {
                    "name": "keyword.operator.comparison.wasmscript",
                    "match": "<=|<|>=|>"
                },
                {
                    "name": "keyword.operator.comparison.wasmscript",
                    "match": "==|!="
                },
                {
                    "name": "keyword.operator.assignment.wasmscript",
                    "match": "="
                },
                {
                    "name": "keyword.operator.arithmetic.wasmscript",
                    "match": "/|%|\\*|\\+|-"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.wasmscript",
                    "match": "\\b(func|end|block|loop|for|if|elif|else|continue|break|return|=>)\\b"
                },
                {
                    "name": "keyword.other.wasmscript",
                    "match": "\\b(import|export|internal|type|interface|let|var)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.wasmscript",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.double.wasmscript",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "storage.type.wasmscript",
                    "match": "\\b(u8|i8|u16|i16|u32|i32|u64|i64|f32|f64|void)\\b"
                },
                {
                    "name": "support.type.wasmscript",
                    "match": "\\b([A-Z][a-z]+)\\b"
                },
                {
                    "name": "support.function.wasmscript",
                    "match": "\\b(sqrt|ceil|floor|round)\\b"
                },
                {
                    "name": "punctuation.accessor.tuple.wasmscript",
                    "match": "(?<=[a-z])\\.[0-9]+"
                },
                {
                    "name": "variable.wasmscript",
                    "match": "\\b[a-z][a-zA-Z0-9-]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "[0-9]+"
                }
            ]
        }
    },
    "scopeName": "source.wasmscript"
}