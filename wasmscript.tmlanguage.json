{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "wasmscript",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.wasmscript",
                    "begin": "--",
                    "end": "\n"
                },
                {
                    "name": "comment.block.wasmscript",
                    "begin": "-<",
                    "end": ">-"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.wasmscript",
                    "match": "\\->|=>"
                },
                {
                    "name": "keyword.operator.logical.wasmscript",
                    "match": "&&|\\|\\||\\?\\?"
                },
                {
                    "name": "keyword.operator.assignment.augmented.wasmscript",
                    "match": "%=|&=|\\*=|\\+=|-=|/=|\\^=|\\|=|<<=|>>=|\\|\\|=|\\?\\?="
                },
                {
                    "name": "keyword.operator.bitwise.wasmscript",
                    "match": "<<|>>|&|\\^|\\|"
                },
                {
                    "name": "keyword.operator.comparison.wasmscript",
                    "match": "<=|<|>=|>"
                },
                {
                    "name": "keyword.operator.comparison.wasmscript",
                    "match": "==|!="
                },
                {
                    "name": "keyword.operator.assignment.wasmscript",
                    "match": "="
                },
                {
                    "name": "keyword.operator.arithmetic.wasmscript",
                    "match": "/|%|\\*|\\+|-"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.block.wasmscript",
                    "match": "\\b(block|loop|if|while|end|br-if|br)(:[a-z][0-9A-Za-z_-]*)?\\b"
                },
                {
                    "name": "keyword.control.wasmscript",
                    "match": "\\b(block|loop|if|elif|else|while|break|continue|return)\\b"
                },
                {
                    "name": "storage.type.wasmscript",
                    "match": "\\b(func|param|result|memory|import|export|define|type|interface|global|local)\\b"
                },
                {
                    "name": "keyword.logic.wasmscript",
                    "match": "\\b(or|and|not|xor|as)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.wasmscript",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.double.wasmscript",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "entity.name.type.wasmscript",
                    "match": "\\b(u8|i8|u16|i16|u32|i32|u64|i64|f32|f64|void)\\b"
                },
                {
                    "name": "support.type.wasmscript",
                    "match": "\\b([A-Z][0-9A-Za-z_-]*)\\b"
                },
                {
                    "name": "support.function.wasmscript",
                    "match": "\\b(sqrt|ceil|floor|round)\\b"
                },
                {
                    "name": "punctuation.accessor.tuple.wasmscript",
                    "match": "(?<=[a-z])\\.[0-9]+"
                },
                {
                    "name": "variable.wasmscript",
                    "match": "\\b[a-z][0-9A-Za-z_-]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "[0-9]+"
                }
            ]
        }
    },
    "scopeName": "source.wasmscript"
}