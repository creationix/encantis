{
  "name": "encantis",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Encantis language compiler and tools",
  "workspaces": [
    "packages/compiler",
    "packages/cli",
    "packages/extension"
  ],
  "scripts": {
    "build:cli": "bun --cwd packages/cli run build",
    "build:ext": "bun --cwd packages/extension run compile",
    "build:ext-web": "bun --cwd packages/extension run compile-web",
    "watch:ext": "bun --cwd packages/extension run watch",
    "watch:ext-web": "bun --cwd packages/extension run watch-web",
    "test": "bun test"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.6",
    "wabt": "^1.0.32"
  }
}