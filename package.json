{
  "name": "encantis",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Encantis language compiler and tools",
  "workspaces": [
    "packages/compiler",
    "packages/cli",
    "packages/extension"
  ],
  "scripts": {
    "build": "bun run -r build",
    "watch": "bun run -r watch",
    "test": "bun test",
    "cli": "bun packages/cli/dist/cli.js",
    "examples:build": "bun scripts/build-examples.ts",
    "examples:check": "bun scripts/check-examples.ts",
    "examples:clean": "bun scripts/clean-examples.ts",
    "examples:all": "bun run examples:clean && bun run examples:check && bun run examples:build"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.6",
    "wabt": "^1.0.32"
  }
}