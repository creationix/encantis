{
  "name": "encantis",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Encantis language compiler and tools",
  "workspaces": [
    "packages/compiler",
    "packages/cli",
    "packages/extension"
  ],
  "scripts": {
    "build:cli": "echo 'CLI uses source directly - no build needed'",
    "cli": "bun packages/cli/src/cli.ts",
    "build:ext": "cd packages/extension && bun run compile",
    "build:ext-web": "cd packages/extension && bun run compile-web",
    "watch:ext": "cd packages/extension && bun run watch",
    "watch:ext-web": "cd packages/extension && bun run watch-web",
    "test": "bun test"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.6",
    "wabt": "^1.0.32"
  }
}